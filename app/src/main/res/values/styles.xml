<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dota_orange</item>
        <item name="colorPrimaryDark">@color/dota_dark_orange</item>
        <item name="colorAccent">@color/grey</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:windowBackground">@color/grey_900</item>

    </style>


    <style name="stats_header" parent = "@android:style/TextAppearance.Large">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="stats_info" parent = "@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!-- Style for matches listview -->
    <style name="MatchListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>
    
    <style name="popUpMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/grey_900</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
