<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dota_orange</item>
        <item name="colorPrimaryDark">@color/dota_dark_orange</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:windowBackground">@color/grey_900</item>

    </style>


    <style name="stats_header" parent = "@android:style/TextAppearance.Large">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="stats_info" parent = "@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/grey_700</item>
    </style>

</resources>
