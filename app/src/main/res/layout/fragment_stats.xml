<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdullah.dota2matchhistory.StatsFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1575307104"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:id="@+id/stats_fragment_match_id" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/5/2015"
                android:textColor="@color/white"
                android:gravity="end"
                android:id="@+id/stats_fragment_date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "7:50 AM"
                android:id="@+id/stats_fragment_time"
                android:gravity="end" />
        </LinearLayout>



    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dire Victory"
        android:textColor="@color/dire"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/stats_fragment_winning_team" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Pick"
                android:textColor="@color/white"
                android:id="@+id/fragment_stats_game_mode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration 34:36s"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="right"
                android:id="@+id/fragment_stats_duration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public Matchmaking"
                android:textColor="@color/white"
                android:id="@+id/fragment_stats_lobby_type" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>